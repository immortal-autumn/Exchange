<!--miniprogram/pages/lovePack/packInfo.wxml-->
<view class="page-body">
  <view class="page-section">
    <!-- catagory -->
    <view class="weui-cells__title">姓名 NAME</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
          <input class="weui-input" maxlength="50" auto-focus placeholder="e.g. 张三" bindinput="name"/>
      </view>
    </view>

    <!-- id -->
    <view class="weui-cells__title">学号 MATRICULATION NO.</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
          <input class="weui-input" maxlength="50" auto-focus placeholder="e.g. 1700000000" bindinput="id"/>
      </view>
    </view>

  <!-- submission -->
  <button type="default" size="{{defaultSize}}" loading="{{loading}}" plain="{{plain}}"
      disabled="{{disabled}}" bindtap="submission" hover-class="other-button-hover" class="submit"> 领取</button> 
  </view>

  <!-- Tips -->
  <view class="page-section">
    <text class="tips">请确认你已经领取到防疫包并且你所提交内容为真！同一类别物资禁止领取第二次！</text>
  </view>
  
</view>
